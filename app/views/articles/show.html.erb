<div class="small-container center-block">
    <h1><%= @article.title %></h1>
    
    <div>
        <p>Escrito por <strong><%= @article.user.email %></strong></p>
        <% if current_user.avatar.attached? %>
            <%= image_tag url_for(current_user.avatar), height:30 %>
        <% end %>
    </div>
    <div>
        <%= @article.content %> <%# el nombre content viene del nombre que se le haya dado dentro del modelo has_rich_text :content  %>
    </div>

    <div class="margin-top">
        <p class="label">Tags</p>
        <% @article.categories.each do |category| %>
            <span class="badge rounded-pill padding" style="background-color:<%= category.color %>">
                <%= link_to category.title, category, class:"text-white" %>
            </span>
         <% end %>
    </div>


    <div>
        <%= link_to "Eliminar articulo",  @article, method: :delete %>
    </div>
</div>